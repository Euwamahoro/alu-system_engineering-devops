#!/usr/bin/env bash
# Update Homebrew
brew update

# Install Nginx
brew install nginx

# Create directory for HTML files
sudo mkdir /usr/local/var/www/html

# Create index.html file with content
echo "Holberton School" | sudo tee /usr/local/var/www/html/index.html > /dev/null

# Start Nginx service
brew services start nginx

# Ensure Nginx is listening on port 80
sudo lsof -i :80
