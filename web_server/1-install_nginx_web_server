#!/usr/bin/env bash
# This installs Nginx on my web-01 server

# Check if brew is installed, install if not
if ! command -v brew &> /dev/null; then
    echo "Homebrew is not installed. Installing..."
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"
fi

# Update Homebrew
brew update

# Install Nginx
brew install nginx

# Create the HTML directory and file
sudo mkdir -p /usr/local/var/www/html
echo "Holberton School" | sudo tee /usr/local/var/www/html/index.html

# Start Nginx
brew services start nginx
