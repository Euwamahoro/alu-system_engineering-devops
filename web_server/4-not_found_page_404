#!/usr/bin/env bash
# Update Homebrew
brew update

# Install Nginx if not already installed
brew install nginx

# Configure Nginx to have a custom 404 page
sudo sed -i '' '/http {/a \    error_page 404 /404.html;\n    location = /404.html {\n        root html;\n        internal;\n    }' /usr/local/etc/nginx/nginx.conf

# Create a custom 404 HTML page with the required string
echo "
<!DOCTYPE html>
<html>
<head>
    <title>404 Not Found</title>
</head>
<body>
    <h1>Ceci n'est pas une page</h1>
</body>
</html>
" | sudo tee /usr/local/var/www/404.html > /dev/null

# Restart Nginx service
brew services restart nginx
